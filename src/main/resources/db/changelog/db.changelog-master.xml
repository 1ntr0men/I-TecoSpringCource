<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="init-ad-schema" author="iteco">
        <sql>
            create schema ad;
        </sql>
    </changeSet>

    <changeSet id="create-ad-address-id-seq" author="iteco">
        <createSequence sequenceName="address_id_seq" schemaName="ad"/>
    </changeSet>

    <changeSet id="create-ad-address-table" author="iteco">
        <createTable tableName="address" schemaName="ad">
            <column name="id" type="integer" defaultValueComputed="nextval('ad.address_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="country" type="varchar"/>
            <column name="city" type="varchar"/>
            <column name="street" type="varchar"/>
            <column name="home" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet id="create-ad-users-id-seq" author="iteco">
        <createSequence sequenceName="users_id_seq" schemaName="ad"/>
    </changeSet>

    <changeSet id="create-ad-users-table" author="iteco">
        <createTable tableName="users" schemaName="ad">
            <column name="id" type="integer" defaultValueComputed="nextval('ad.users_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar"/>
            <column name="address_id" type="integer">
                <constraints foreignKeyName="users_address_fkey" references="ad.address(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-dict-schema" author="iteco">
        <sql>
            create schema dict;
        </sql>
    </changeSet>

    <changeSet id="create-dict-currency-id-seq" author="iteco">
        <createSequence sequenceName="currency_id_seq" schemaName="dict"/>
    </changeSet>

    <changeSet id="create-dict-currency-table" author="iteco">
        <createTable tableName="currency" schemaName="dict">
            <column name="id" type="integer" defaultValueComputed="nextval('dict.currency_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="insert-dict-currency" author="iteco">
        <insert tableName="currency" schemaName="dict">
            <column name="name">USD</column>
        </insert>
        <insert tableName="currency" schemaName="dict">
            <column name="name">EUR</column>
        </insert>
        <insert tableName="currency" schemaName="dict">
            <column name="name">RUB</column>
        </insert>
        <insert tableName="currency" schemaName="dict">
            <column name="name">GBP</column>
        </insert>
    </changeSet>

    <changeSet id="init-bank-schema" author="iteco">
        <sql>
            create schema bank;
        </sql>
    </changeSet>

    <changeSet id="create-bank-bank_book-id-seq" author="iteco">
        <createSequence sequenceName="bank_book_id_seq" schemaName="bank"/>
    </changeSet>

    <changeSet id="create-bank-bank_book-table" author="iteco">
        <createTable tableName="bank_book" schemaName="bank">
            <column name="id" type="integer" defaultValueComputed="nextval('bank.bank_book_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="number" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="integer">
                <constraints nullable="false" foreignKeyName="bank_book_user_fkey" references="ad.users(id)"/>
            </column>
            <column name="currency_id" type="integer">
                <constraints nullable="false" foreignKeyName="bank_book_currency_fkey" references="dict.currency(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-ad-group-id-seq" author="iteco">
        <createSequence sequenceName="group_id_seq" schemaName="ad"/>
    </changeSet>

    <changeSet id="create-ad-group-table" author="iteco">
        <createTable tableName="group" schemaName="ad">
            <column name="id" type="integer" defaultValueComputed="nextval('ad.group_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-ad-users_groups-table" author="iteco">
        <createTable tableName="users_groups" schemaName="ad">
            <column name="user_id" type="integer">
                <constraints nullable="false" foreignKeyName="users_groups_user_fkey" references="ad.users(id)"/>
            </column>
            <column name="group_id" type="integer">
                <constraints nullable="false" foreignKeyName="users_groups_group_fkey" references="ad.group(id)"/>
            </column>
        </createTable>
        <addPrimaryKey schemaName="ad" tableName="users_groups" columnNames="user_id, group_id"/>
    </changeSet>

    <changeSet id="create-bank-status-id-seq" author="iteco">
        <createSequence sequenceName="status_id_seq" schemaName="bank"/>
    </changeSet>

    <changeSet id="create-bank-status-table" author="iteco">
        <createTable tableName="status" schemaName="bank">
            <column name="id" type="integer" defaultValueComputed="nextval('bank.status_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="insert-bank-status" author="iteco">
        <insert tableName="status" schemaName="bank">
            <column name="name">processing</column>
        </insert>
        <insert tableName="status" schemaName="bank">
            <column name="name">successful</column>
        </insert>
        <insert tableName="status" schemaName="bank">
            <column name="name">declined</column>
        </insert>
    </changeSet>

    <changeSet id="create-bank-transaction-id-seq" author="iteco">
        <createSequence sequenceName="transaction_id_seq" schemaName="bank"/>
    </changeSet>

    <changeSet id="create-bank-transaction-table" author="iteco">
        <createTable tableName="transaction" schemaName="bank">
            <column name="id" type="integer" defaultValueComputed="nextval('bank.transaction_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="source_bank_book_id" type="integer">
                <constraints nullable="false" foreignKeyName="transaction_source_bank_book_fkey"
                             references="bank.bank_book(id)"/>
            </column>
            <column name="target_bank_book_id" type="integer">
                <constraints nullable="false" foreignKeyName="transaction_target_bank_book_fkey"
                             references="bank.bank_book(id)"/>
            </column>
            <column name="amount" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="initiation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="timestamp"/>
            <column name="status" type="integer">
                <constraints nullable="false" foreignKeyName="transaction_status_fkey" references="bank.status(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-user-auth-sequence" author="iteco">
        <createSequence sequenceName="user_auth_id_seq" schemaName="ad"/>
    </changeSet>

    <changeSet id="crate-user-auth-table" author="iteco">
        <createTable tableName="user_auth" schemaName="ad">
            <column name="id" type="integer" defaultValueComputed="nextval('ad.user_auth_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="username" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-role-id-seq" author="iteco">
        <createSequence sequenceName="role_id_seq" schemaName="ad"/>
    </changeSet>

    <changeSet id="create-role-table" author="iteco">
        <createTable tableName="role" schemaName="ad">
            <column name="id" type="integer" defaultValueComputed="nextval('ad.role_id_seq')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-user-auth-roles-table" author="iteco">
        <createTable tableName="user_auth_roles">
            <column name="user_auth_id" type="integer">
                <constraints nullable="false" foreignKeyName="user_auth_id_fkey" references="ad.user_auth(id)"/>
            </column>
            <column name="role_id" type="integer">
                <constraints nullable="false" foreignKeyName="role_id_fkey" references="ad.role(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>